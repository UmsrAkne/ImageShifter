<Window
    x:Class="ImageShifter.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ImageShifter.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="480"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Enter the path to the folder containing .bmp files :" />
            <Border Height="5" />
            <TextBox Text="{Binding TargetDirectoryPath, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <CheckBox
                    Margin="5,0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding IsDeleteOriginalFilesEnabled}">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <TextBlock VerticalAlignment="Center" Text="Delete original files" />
            </StackPanel>

            <Button
                Grid.Column="1"
                Margin="0,5"
                Padding="50,3"
                HorizontalAlignment="Right"
                Command="{Binding ConvertImagesAsyncCommand}"
                Content="Convert" />
        </Grid>

        <Border
            Grid.Row="2"
            BorderBrush="DimGray"
            BorderThickness="1">
            <ScrollViewer x:Name="LogScrollViewer">
                <TextBox
                    Text="{Binding LogText}"
                    TextChanged="LogTextBox_TextChanged"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>