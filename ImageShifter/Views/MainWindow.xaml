<Window
    x:Class="ImageShifter.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ImageShifter.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="480"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Enter the path to the folder containing .bmp files :" />
            <Border Height="5" />
            <TextBox Text="{Binding TargetDirectoryPath, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <CheckBox
                    Margin="5,0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding IsDeleteOriginalFilesEnabled}">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <TextBlock VerticalAlignment="Center" Text="Delete original files" />
            </StackPanel>

            <Button
                Grid.Column="1"
                Margin="0,5"
                HorizontalAlignment="Right"
                Command="{Binding ConvertImagesAsyncCommand}"
                Content="Convert"
                IsEnabled="{Binding IsConvertButtonEnabled}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Padding="40,3"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Opacity="1">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>

                            <!-- マウスオーバー時：薄緑 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CCFFCC"/>
                            </Trigger>

                            <!-- 押下時：やや濃い緑 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#99FF99"/>
                            </Trigger>

                            <!-- 無効時：半透明に -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <!-- 通常時の背景色（お好みで） -->
                <Button.Background>White</Button.Background>
            </Button>        </Grid>

        <Border
            Grid.Row="2"
            BorderBrush="DimGray"
            BorderThickness="1">
            <ScrollViewer x:Name="LogScrollViewer">
                <TextBox
                    Text="{Binding LogText}"
                    TextChanged="LogTextBox_TextChanged"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>

        <ProgressBar
            Grid.Row="3"
            Height="15"
            Margin="0,4,0,0"
            Maximum="100"
            Minimum="0"
            Value="{Binding ProgressValue}" />
    </Grid>
</Window>